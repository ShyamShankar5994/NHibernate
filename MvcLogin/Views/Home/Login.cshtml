@model MvcLogin.Models.login
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <fieldset style="300px">
        <legend>Login</legend>
        <table>
            <tr>
                <td>@Html.Label("Enter User Name")</td>
            </tr>
            <tr>
                <td>@Html.TextBoxFor(a=>a.username)</td>
            </tr>
            <tr>
                <td>@Html.Label("Enter Password")</td>
            </tr>
            <tr>
                <td>@Html.PasswordFor(a=>a.password)</td>
            </tr>
            <tr>
                <td><input type="submit" id="submitbtn" value="Login" /> </td>
            </tr>
        </table>
    </fieldset>
}

<h2>Login</h2>

